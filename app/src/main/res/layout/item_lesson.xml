<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <TextView
        android:id="@+id/tv_lesson_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@id/tv_lesson_times"
        android:padding="2dp"
        android:text="Some text kek"
        android:textAppearance="@style/TextAppearanceSubtitle" />

    <TextView
        android:id="@+id/tv_lesson_additional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_lesson_title"
        android:layout_alignParentStart="true"
        android:padding="2dp"
        android:text="Some more text keeeek"
        android:textAppearance="@style/TextAppearanceSmall" />

    <TextView
        android:id="@+id/tv_lesson_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_lesson_title"
        android:layout_alignParentEnd="true"
        android:padding="2dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearanceSubtitle" />

</RelativeLayout>